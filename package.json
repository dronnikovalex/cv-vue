{
  "name": "cv-vue",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vue-cli-service serve",
    "test": "npx cypress open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start-test": "start-test 8080 test",
    "delete:results": "rm cypress/results/mocha/* || true",
    "delete:reports": "rm -rf mochareports || true",
    "merge:reports": "mkdir mochareports & npx mochawesome-merge cypress/results/mocha/*.json > mochareports/report-$(date +'%d-%m-%Y'_%H-%M).json",
    "generate:html": "npx marge mochareports/*.json -f report-$(date +'%d-%m-%Y'_%H-%M) -o mochareports",
    "prereport": "npm run delete:results && npm run delete:reports",
    "run:e2e:mocha": "cypress run --e2e --reporter mochawesome",  
    "run:e2e": "npm run prereport && start-test 8080 run:e2e:mocha",
    "run:all": "npm run run:e2e & npm run merge:reports && npm run generate:html"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-brands-svg-icons": "^6.0.0",
    "@fortawesome/free-regular-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/vue-fontawesome": "^3.0.0-5",
    "axios": "^0.27.2",
    "core-js": "^3.6.5",
    "vee-validate": "^4.5.8",
    "vue": "^3.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@vue/cli-plugin-babel": "~4.5.15",
    "@vue/cli-plugin-eslint": "~4.5.15",
    "@vue/cli-service": "~4.5.15",
    "@vue/compiler-sfc": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "cy-spok": "^1.5.2",
    "cypress": "^10.1.0",
    "cypress-mochawesome-reporter": "^3.2.2",
    "cypress-multi-reporters": "^1.6.1",
    "cypress-slack-reporter": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^7.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0",
    "start-server-and-test": "^1.14.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
